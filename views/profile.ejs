<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name %>'s Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.0.1/dist/full.css" rel="stylesheet" />
</head>
<body>
    <%- include("./partials/navbar")  %>
<div class="container mx-auto p-6 bg-gray-100 min-h-screen">
    <div class="flex flex-col md:flex-row bg-white shadow-lg rounded-lg p-6">
        <!-- User Profile Section -->
        <div class="w-full md:w-1/3 flex flex-col items-center">
            <!-- User Image -->
            <img src="<%= locals.user.profileImageUrl %>" alt="User Image" class="w-32 h-32 rounded-full object-cover mb-4">
            <!-- User Name -->
            <h1 class="text-2xl font-semibold text-gray-800"><%= locals.user.name %></h1>
            <!-- Additional User Info -->
            <p class="text-gray-600 mt-2">Email: <%= locals.user.email %></p>
            <p class="text-gray-600">Bio: I am a cool developer <%= locals.user.bio %></p>
        </div>

        <!-- User Blogs Section -->
        <div class="w-full md:w-2/3 mt-6 md:mt-0">
            <h2 class="text-xl font-semibold text-gray-800 mb-6">My Blogs</h2>

            <!-- Iterate through blogs -->
            <% blogs.forEach(function(blog) { %>
                <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
                    <h3 class="text-xl font-semibold text-gray-700 mb-2"><%= blog.title %></h3>
                    <figure class="mb-4">
                        <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="object-cover w-full h-48 rounded-lg mb-4">
                    </figure>
                    <p class="text-gray-600 mb-4 blog-preview"><%= blog.body.substring(0, 100) %>...</p>
                    <a href="/blogs/<%= blog._id %>" class="text-blue-500 hover:text-blue-700 font-semibold">Read more</a>
                </div>
            <% }); %>

            <!-- If there are no blogs -->
            <% if (blogs.length === 0) { %>
                <p class="text-gray-600">No blogs available.</p>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
