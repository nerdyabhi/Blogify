<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= fullName %>'s Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="bg-blue-600 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-white text-2xl font-bold">My Dashboard</a>
            <div class="space-x-4">
                <a href="/" class="text-white hover:text-blue-200">Home</a>
                <a href="/profile" class="text-white hover:text-blue-200">Profile</a>
                <a href="/settings" class="text-white hover:text-blue-200">Settings</a>
                <a href="/logout" class="text-white hover:text-blue-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto mt-8">
        <h1 class="text-3xl font-bold mb-8">Welcome, <%= fullName %>!</h1>

        <!-- Blog Posts Section -->
        <section>
            <h2 class="text-2xl font-semibold mb-4">Your Blog Posts</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% if (typeof blogs !== 'undefined' && blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <h3 class="text-xl font-semibold mb-2"><%= blog.title %></h3>
                            <p class="text-gray-600 mb-4"><%= blog.excerpt %></p>
                            <a href="/blog/<%= blog.id %>" class="text-blue-600 hover:text-blue-800">Read more</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="col-span-3 text-center text-gray-600">No blog posts available.</p>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-200 mt-12 py-6">
        <div class="container mx-auto text-center text-gray-600">
            &copy; 2024 My Dashboard. All rights reserved.
        </div>
    </footer>
</body>
</html>